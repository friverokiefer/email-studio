# =====================================
# IA ENGINE / OPENAI
# =====================================

# API Key de OpenAI usada por el backend
OPENAI_API_KEY=

# Modelos de texto
OPENAI_TEXT_JSON=gpt-4o
OPENAI_TEXT_LITE=gpt-4o-mini
OPENAI_TEXT_QUALITY=gpt-4o

# Modelo de imágenes
OPENAI_IMAGE=gpt-image-1

# Versionado de prompts (controla cambios en la lógica de generación)
PROMPT_BLOG_VERSION=v1

# =====================================
# GOOGLE CLOUD / GCS
# =====================================

# ID del proyecto GCP
GCP_PROJECT_ID=test-ai-gcp

# Nombre del bucket donde se guardan emails, imágenes, etc.
GCP_BUCKET_NAME=poc-ai-martech-sandbox

# Prefijo lógico (dev | stg | prod)
GCP_PREFIX=dev

# Prefijo específico donde se guardan los emails_v2
GCS_EMAILS_PREFIX=emails_v2

# Ruta local hacia el JSON de cuenta de servicio (solo para local)
GOOGLE_APPLICATION_CREDENTIALS=./backend/.secrets/service-account.json

# ¿Los assets se exponen con ACL pública?
GCP_PUBLIC_READ=true

# Modo de URL pública de GCS: path o virtual_hosted
GCP_URL_STYLE=path

# Carpeta local donde se generan assets antes de subirlos
GENERATED_BASE_PATH=./backend/tmp/generated

# =====================================
# FRONTEND / VITE — COHERENCIA CON GCS
# =====================================

# Mismo bucket que acá arriba
VITE_GCS_BUCKET=poc-ai-martech-sandbox
# Mismo prefijo (dev | stg | prod)
VITE_GCS_PREFIX=dev

# CORS para permitir que el frontend hable con el backend
CORS_ORIGINS=https://frontend-151554496273.europe-west1.run.app

# =====================================
# SALESFORCE MARKETING CLOUD (SFMC)
# =====================================

SFMC_AUTH_URL=
SFMC_CLIENT_ID=
SFMC_CLIENT_SECRET=
SFMC_ACCOUNT_ID=518005971 # MID (Account ID) de SFMC
SFMC_DEFAULT_CATEGORY_ID=339292 # Categoría por defecto donde se crean assets/emails
SFMC_CATEGORY_ID=339292 # (Opcional / legado) Otra categoría usada por código antiguo

# =====================================
# IA ENGINE (PYTHON) — INTEGRACIÓN OPCIONAL
# =====================================

# ¿El backend delega a IA Engine o usa OpenAI directo?
IA_ENGINE_ENABLED=true

# URL del microservicio IA Engine (Cloud Run si está activo)
IA_ENGINE_BASE_URL=http://127.0.0.1:8000
